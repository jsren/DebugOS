<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="DebugOS.SmartSearchResult"
	x:Name="UserControl"
	d:DesignWidth="118" d:DesignHeight="15.96">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="17"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Image x:Name="image" HorizontalAlignment="Center" Height="14" Margin="0" VerticalAlignment="Center" Width="14"/>
		<TextBlock x:Name="valueText" Margin="6,0,0,0" VerticalAlignment="Top" Grid.Column="1" TextTrimming="CharacterEllipsis" MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave" ToolTip="{Binding Text, ElementName=valueText}" Cursor="Hand" Background="#00F4F4F5" MouseLeftButtonDown="OnMouseClick"/>
	</Grid>
</UserControl>