	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="DebugOS.BochsConfiguration"
	x:Name="Window"
	Title="Configure Bochs"
	Width="705" Height="501">

	<Grid x:Name="LayoutRoot">
