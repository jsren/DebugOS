		<TextBlock HorizontalAlignment="Left" Height="23" Margin="219,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144"><Run Language="en-gb" Text="Instructions Per Second"/></TextBlock>
		<ComboBox HorizontalAlignment="Left" Margin="219,188,0,0" VerticalAlignment="Top" Width="262"/>
		<CheckBox Content="Enable CPU Reset on Triple Fault&#xD;&#xA;" HorizontalAlignment="Left" Margin="219,253,0,0" VerticalAlignment="Top" Height="19.92" IsChecked="True"/>
		<CheckBox Content="Ignore Invalid MSR Access" HorizontalAlignment="Left" Margin="219,279.92,0,0" VerticalAlignment="Top" Height="19.92" IsChecked="True"/>
